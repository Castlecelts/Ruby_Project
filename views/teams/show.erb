<h1>Team Details</h1>

<h2><%= @team.name %></h2>
<p>Region: <%= @team.region %></p>
<br>

<p>TEAM ROSTER</p>

<br>


<table>
  <tr>
    <th>#</th>
    <th>Hero Name</th>
    <th>World</th>
    <th>Role</th>
    <th>Delete</th>
  </tr>
<% for hero in @heroes%>
  <tr>
    <td> <%= @numbering += 1 %> </td>
    <td><a href="/heroes/<%= hero.id %>"><%= hero.name%></a> </td>
    <td><%= hero.world%></td>
    <td>what they do</td>
    <td><form action="/hero_teams/<%=hero.join_table_id %>/delete" method="POST"><input type="submit" value="Delete Hero"></form> </td>
  </tr>
<% end%>
</table>

<br>

<a href="/hero_teams/new?team_id=<%= @team.id %>">Add Hero to Team Roster</a>

<br>
<br>
<br>

<a href="/teams/<%= @team.id %>/edit">Edit Team details</a>

<br>
<br>

<form action="/teams/<%= @team.id %>/delete" method="POST"><input type="submit" value="Delete whole team"></form>
